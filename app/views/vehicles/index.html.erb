<h1>Listing vehicles</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>

      <th>Name</th>
      <th>Brand</th>
      <th>Vehicle type</th>
      <th>Customer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @vehicles.each do |vehicle| %>
  <tr class="<%=cycle :success, :error, :warning, :info %> " >
    <td><%= vehicle.name %></td>
    <td><%= vehicle.brand.name %></td>
    <td><%= vehicle.vehicle_type.name %></td>
    <td><%= vehicle.customer.name %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to icon('plus')+ 'New Vehicle', new_vehicle_path, class: 'btn btn-primary' %>
